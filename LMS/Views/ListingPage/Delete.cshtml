@model Book;
<div>
	<h2>Delete Book</h2>
	<div class="alert alert-danger">
		<strong>Are you sure you want to delete this book?</strong><br>
		Once deleted, this action cannot be undone.
	</div>
	<form asp-action="Delete" method="post">
		<input type="hidden" asp-for="BookId" />
		<div class="form-group">
			<label for="Title">Title</label>
			<input type="text" asp-for="Title" class="form-control" required readonly/>
		</div>
		<div class="form-group">
			<label for="Author">Author</label>
			<input type="text" asp-for="Author" class="form-control" required readonly />
		</div>
		<div>
			<label for="ISBN">ISBN</label>
			<input type="text" asp-for="ISBN" class="form-control" required readonly />
		</div>
		<div>
			<label for="PubhlishedDate">Published Date</label>
			<input type="date" asp-for="PublishedDate" class="form-control"  required readonly />
		</div>
		<div class="form-group mt-3">
			<button type="submit" class="btn btn-danger">Delete Book</button>
			<a asp-action="Index" class="btn btn-primary">Cancel</a>
		</div>
	</form>
</div>