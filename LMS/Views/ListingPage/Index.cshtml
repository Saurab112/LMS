@model List<Book>

<h2>Books List</h2>
<table class="table">
	<thead>
		<tr class="table-primary">
			<th>Title</th>
			<th>Author</th>
			<th>ISBN</th>
			<th>Published Date</th>
			<th>Availability</th>
			<th>Actions</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var book in Model)
		{
			<tr>
				<td>@book.Title</td>
				<td>@book.Author</td>
				<td>@book.ISBN</td>
				<td>@book.PublishedDate.ToString("yyyy-MM-dd")</td>
				<td>
					if(@book.isAvailable){
						@("Available")
					}
					else{
						@("Unavailable")
					}
				</td>
				<td>
					<a asp-action="Details" asp-route-id="@book.BookId" class="btn btn-primary">Details</a>
					<a asp-action="Edit" asp-route-id="@book.BookId" class="btn btn-primary">Details</a>
					<a asp-action="Delete" asp-route-id="@book.BookId" class="btn btn-danger">Details</a>
					<a asp-action="Borrow" asp-route-id="@book.BookId" class="btn btn-warning">Details</a>

				</td>
			</tr>
		}
		</tbody>
	</table>
